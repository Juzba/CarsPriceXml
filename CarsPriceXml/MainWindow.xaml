<Window x:Class="CarsPriceXml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarsPriceXml"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid Margin="-10,0,10,0">
        <Button x:Name="ButtonOpen" Content="Open file" HorizontalAlignment="Left" Height="62" Margin="661,42,0,0" VerticalAlignment="Top" Width="116" Click="ButtonOpen_Click" Background="#FF3FB6E3" FontSize="15">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

        <DataGrid x:Name="DataGridInput" HorizontalAlignment="Left" HeadersVisibility="Column" Height="155" Margin="46,162,0,0" VerticalAlignment="Top" Width="512" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" AlternationCount="1" AlternatingRowBackground="#FFD9D2D2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Date" Binding="{Binding DateDT, StringFormat='{}{0:dd.MM.yyyy}'}" />
                <DataGridTextColumn Header="Price" Binding="{Binding PriceD}" />
                <DataGridTextColumn Header="DPH" Binding="{Binding DPH}" />
            </DataGrid.Columns>
            <DataGrid.CellStyle>
                <Style/>
            </DataGrid.CellStyle>
        </DataGrid>
        
        <TextBlock x:Name="textBlockError" HorizontalAlignment="Left" Height="26" Margin="46,91,0,0" TextWrapping="Wrap" Text="Error" VerticalAlignment="Top" Width="212" FontSize="15"/>
        <TextBlock x:Name="textBlockPath" HorizontalAlignment="Left" Height="44" Margin="46,42,0,0" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" Width="574" FontSize="15"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="26" Margin="46,122,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="212" FontSize="15"/>

        <DataGrid x:Name="DataGridResult"  ItemsSource="{Binding Cars}" HorizontalAlignment="Left" Height="255" Margin="46,339,0,0" VerticalAlignment="Top" Width="512" d:ItemsSource="{d:SampleData ItemCount=5}" GridLinesVisibility="Horizontal" FontSize="14" AutoGenerateColumns="False" CanUserResizeRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" HeadersVisibility="Column" >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Nazev modelu" Width="*">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Název modelu" FontWeight="Bold" FontSize="16" Grid.Row="0" Grid.Column="0" Margin="5 0 0 0" />
                                <TextBlock Text="Cena bez DPH" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="5 0 0 0" />
                                <TextBlock Text="Cena s DPH" FontWeight="Bold" Grid.Row="1" Grid.Column="2" Margin="5 0 0 0" />
                                
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="200" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="10 0 0 0"/>
                                <TextBlock Text="{Binding Price, StringFormat='C'}" Grid.Row="1" Grid.Column="0" Margin="10 0 0 0" />
                                <TextBlock Text="{Binding PriceWithDPH}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Margin="10 0 0 0" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
